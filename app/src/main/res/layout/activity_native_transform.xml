<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvBasicInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="16dp"
            android:text="Basic input"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnBasicTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="基础输入测试"
            app:layout_constraintStart_toStartOf="@id/tvBasicInput"
            app:layout_constraintTop_toBottomOf="@id/tvBasicInput" />

        <Button
            android:id="@+id/btnBasicTestOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="基础输出测试"
            app:layout_constraintBaseline_toBaselineOf="@id/btnBasicTest"
            app:layout_constraintStart_toEndOf="@id/btnBasicTest" />

        <TextView
            android:id="@+id/tvTransformEntity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:text="实体类的相互转换"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/tvBasicInput"
            app:layout_constraintTop_toBottomOf="@id/btnBasicTest" />

        <Button
            android:id="@+id/btnEntitySimple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="基础类型转换"
            app:layout_constraintStart_toStartOf="@id/tvTransformEntity"
            app:layout_constraintTop_toBottomOf="@id/tvTransformEntity" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>